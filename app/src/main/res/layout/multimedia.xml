<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252833"
    tools:context=".App">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#9A9A9A"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <!-- Botón de menú a la izquierda -->
        <ImageButton
            android:id="@+id/buttonPopupMenu"
            android:layout_width="35dp"
            android:layout_height="42dp"
            android:layout_gravity="start|center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            android:src="@drawable/menu" />

        <!-- Texto centrado -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="Smart Interact"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Avatar a la derecha -->
        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Avatar de Usuario"
            android:scaleType="fitCenter"
            android:src="@drawable/logoavatar" />

    </androidx.appcompat.widget.Toolbar>


    <ImageButton
        android:id="@+id/reproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/botonregistrarse"
        android:src="@drawable/reproducir"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0" />


    <ImageButton
        android:id="@+id/parar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/botonregistrarse"
        android:src="@drawable/detener"
        android:text="CARGAR IMAGEN"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/reiniciar"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/reiniciar"
        app:layout_constraintTop_toTopOf="@+id/reiniciar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/botonregistrarse"
        android:src="@drawable/no_repetir"
        android:text="CARGAR IMAGEN"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/reproducir"
        app:layout_constraintStart_toEndOf="@+id/reproducir"
        app:layout_constraintTop_toTopOf="@+id/reproducir"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <View
        android:id="@+id/view2"
        android:layout_width="310dp"
        android:layout_height="350dp"
        android:background="@drawable/background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />


    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:srcCompat="@drawable/portada" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.8"
        tools:ignore="MissingConstraints">


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ImageButton
        android:id="@+id/menu_home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="23dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Home"
        android:scaleType="fitCenter"
        android:src="@drawable/homi"
        app:layout_constraintBottom_toBottomOf="@+id/menu_sensores"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/menu_sensores"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/menu_sensores"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Search"
        android:scaleType="fitCenter"
        android:src="@drawable/sensores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_home"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.176" />

    <ImageButton
        android:id="@+id/menu_API"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Profile"
        android:scaleType="fitCenter"
        android:src="@drawable/apiic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_sensores"
        app:layout_constraintTop_toTopOf="@+id/menu_sensores"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/menu_imagenes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Profile"
        android:scaleType="fitCenter"
        android:src="@drawable/galeria"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_API"
        app:layout_constraintTop_toTopOf="@+id/menu_API"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/menu_multimedia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="23dp"
        android:layout_weight="5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Profile"
        android:scaleType="fitCenter"
        android:src="@drawable/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toEndOf="@+id/menu_imagenes"
        app:layout_constraintTop_toTopOf="@+id/menu_API"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
